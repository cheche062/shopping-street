/* components/w-goods-item/w-goods-item.wxss */
.goods-item{
  text-align: center;
  color: #333;
}

.goods-item .item-img{
  width: 100%;
  border-radius: 5px;
}

.item-title{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 28rpx;
}

.item-detail-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
}

.info {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 0;
}

.info .price {
  color: #ff5777;
}
.info .icon {
  width: 30rpx;
  height: 30rpx;
  padding: 0 6rpx 0 10rpx;
  vertical-align: middle;
}
.info text{
  vertical-align: middle;
  font-size: 26rpx;
}